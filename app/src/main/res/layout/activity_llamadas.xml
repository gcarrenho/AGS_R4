<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05" >

        <TableRow
            android:id="@+id/editarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="6dp">

            <LinearLayout android:id="@+id/button_emer" android:background="@drawable/box_free_simple" android:orientation="vertical" android:clickable="true"
                android:layout_weight="3" android:layout_height="120dp" android:focusable="true">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="14.06"
                    android:scaleType="center"
                    android:src="@drawable/iconllamada" />

                <LinearLayout  android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center">
                    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|top" android:textSize="18sp"
                        android:text="@string/llamada_emergencia" android:typeface="serif" android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

        </TableRow>



        <TableRow
            android:id="@+id/pieButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/button_call_lugar"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:background="@drawable/box_free_simple"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.15"
                    android:scaleType="center"
                    android:src="@drawable/icon_llamada" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/llamada_lugar"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

        </TableRow>  <TableRow
        android:id="@+id/butoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:layout_marginTop="6dp">

    </TableRow>

    </TableLayout>
</LinearLayout>