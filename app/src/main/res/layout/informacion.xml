        <TableRow
            android:id="@+id/rowconfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/button_config"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:background="@drawable/box_free_simple"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.15"
                    android:scaleType="center"
                    android:src="@drawable/button_icon_settings_red" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/config"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/pieButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/button_rec"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:background="@drawable/box_free_simple"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.15"
                    android:scaleType="center"
                    android:src="@drawable/information" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/uso"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

        </TableRow>


        <TableRow
            android:id="@+id/butoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_marginTop="6dp">

        </TableRow>

    </TableLayout>
