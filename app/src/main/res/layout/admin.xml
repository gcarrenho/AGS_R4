<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05" >

        <TableRow
            android:id="@+id/rowLlamadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="6dp">

            <LinearLayout android:id="@+id/button_cargar_numero" android:background="@drawable/box_free_simple" android:orientation="vertical" android:clickable="true"
                android:layout_weight="3" android:layout_height="120dp" android:focusable="true">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="14.06"
                    android:scaleType="center"
                    android:src="@drawable/icon_llamada" />

                <LinearLayout  android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center">
                    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|top" android:textSize="16sp"
                        android:text="@string/admin_numero" android:typeface="serif" android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

        </TableRow>



        <TableRow
            android:id="@+id/butoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_marginTop="6dp">

        </TableRow>

    </TableLayout>
</LinearLayout>